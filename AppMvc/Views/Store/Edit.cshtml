
@model AppMvc.Models.Store
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Store" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoreId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label">CNPJ</label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <h4>IPhones da Loja : </h4>
            <hr/>
            
                @if(Model.IphoneList != null)
                {
                    @for(var i = 0; i < Model.IphoneList.Count; i++)
                    {
                        @if(Model.IphoneList[i] is not null)
                        {
                            <div class="form-group">
                                <label asp-for="IphoneList[i].Model" class="control-label">Modelo:</label>
                                <input asp-for="IphoneList[i].Model" class="form-control" />
                                <span asp-validation-for="IphoneList[i].Model" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Iphone.ImagemUpload" class="control-label"></label>
                                <input type="file" asp-for="Iphone.ImagemUpload" class="form-control"/>
                                <span asp-validation-for="Iphone.ImagemUpload" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Iphone.Price" class="control-label">Preço</label>
                                <input asp-for="Iphone.Price" class="form-control" />
                                <span asp-validation-for="Iphone.Price" class="text-danger"></span>
                            </div>
                        }
                        
                    }
                }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
