@model AppMvc.Models.Store

@{
    ViewData["Title"] = "Create";
}

<h1>Criar: </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Iphone.Model" class="control-label">Modelo:</label>
                <input asp-for="Iphone.Model" class="form-control" />
                <span asp-validation-for="Iphone.Model" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Iphone.ImagemUpload" class="control-label"></label>
                <input type="file" asp-for="Iphone.ImagemUpload" id="ImageUpload" class="form-control" />
                <span asp-validation-for="Iphone.ImagemUpload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Iphone.Price" class="control-label">Preço</label>
                <input asp-for="Iphone.Price" class="form-control" />
                <span asp-validation-for="Iphone.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#ImageUpload").attr("data-val", "true")
        $("#ImageUpload").attr("data-val-required", "Preencha o campo Imagem ");
    </script>

}
